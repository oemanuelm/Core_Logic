#include <DHT.h>

#define DHTPIN 4
#define DHTTYPE DHT22

DHT dht(DHTPIN, DHTTYPE);

void setup() {
  Serial.begin(115200);
  dht.begin();
}

void loop() {
  float temperatura = dht.readTemperature();

  if (isnan(temperatura)){
    Serial.println("Erro na leitura do sensor");
  }else{
    Serial.println("Temperatura: ");
    Serial.println(temperatura);
    Serial.println(" Â°C");
  }
  
  delay(2000);

}
